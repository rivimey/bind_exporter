[Unit]
Description=bind_exporter
Wants=network-online.target
After=network-online.target

[Service]
User={{ bind_exporter_user }}
Group={{ bind_exporter_group }}
Type=simple
ExecStart={{ bind_exporter_bin_path }}/bind_exporter --web.listen-address {{ bind_exporter_listen_address }} {{ bind_exporter_additional_cli_args }}
Restart=always

ProtectHome=true
PrivateTmp=true
ProtectSystem=full
NoNewPrivileges=true
PrivateDevices=true
ProtectControlGroups=yes
ProtectKernelModules=yes
ProtectKernelTunables=yes
RestrictNamespaces=yes
RestrictRealtime=yes
RestrictSUIDSGID=yes
MemoryDenyWriteExecute=yes
SystemCallFilter=~@obsolete
LockPersonality=yes
MemoryDenyWriteExecute=yes
ProtectClock=yes
ProtectHostname=yes
ProtectKernelLogs=yes

[Install]
WantedBy=multi-user.target
